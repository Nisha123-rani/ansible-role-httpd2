---
- name: Add ufw firewall rules
  community.general.ufw:
    rule: allow
    port: "80"
    proto: tcp
- name: Reload ufw firewall  the new rule
  community.general.ufw:
    state: enabled
- name: Copy index file to apache directory
  ansible.builtin.copy:
    src: files/index.html
    dest: /var/www/html
    mode: '0644'
